{
  "name": "mi-pulperia",
  "author": "Axel Estrada <axele1524@gmail.com>",
  "description": "Aplicación de escritorio diseñada para la gestión de inventario, ventas y clientes de una pulpería.",
  "private": true,
  "version": "0.7.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "build:frontend": "vite build",
    "build:electron": "npm run build:frontend && electron-builder",
    "release": "npm run build:frontend && electron-builder --publish always",
    "rebuild": "npx electron-rebuild -f -w better-sqlite3",
    "db:generate": "npx drizzle-kit generate",
    "postinstall": "npx electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@heroui/react": "^2.8.7",
    "@hookform/resolvers": "^5.2.2",
    "@iconify/react": "^6.0.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.12",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-table": "^8.21.3",
    "better-sqlite3": "^12.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "drizzle-orm": "^0.45.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.29.2",
    "lucide-react": "^0.562.0",
    "next-themes": "^0.4.6",
    "react": "^18.2.0",
    "react-day-picker": "^9.13.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.69.0",
    "react-hook-form-persist": "^3.0.0",
    "react-router-dom": "^7.8.1",
    "react-virtualized": "^9.22.6",
    "recharts": "^2.15.4",
    "sharp": "^0.34.5",
    "sileo": "^0.1.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12",
    "ts-key-enum": "^3.0.13",
    "use-mask-input": "^3.6.0",
    "vaul": "^1.1.2",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@iconify/json": "^2.2.421",
    "@svgr/core": "^8.1.0",
    "@svgr/plugin-jsx": "^8.1.0",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/react-virtualized": "^9.22.3",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "drizzle-kit": "^0.31.8",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5.2.2",
    "unplugin-auto-import": "^20.0.0",
    "unplugin-icons": "^22.5.0",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.axelestrada.mipulperia",
    "productName": "Mi Pulpería",
    "publish": [
      {
        "provider": "github",
        "owner": "axelestrada",
        "repo": "mi-pulperia",
        "vPrefixedTagName": true
      }
    ],
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraResources": [
      {
        "from": "drizzle",
        "to": "drizzle"
      }
    ],
    "win": {
      "icon": "build/icons/win/icon.ico",
      "target": ["nsis"]
    },
    "mac": {
      "icon": "build/icons/mac/icon.icns"
    },
    "linux": {
      "icon": "build/icon.png"
    }
  }
}
